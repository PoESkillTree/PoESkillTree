<UserControl x:Class="POESKillTree.Views.Equipment.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:POESKillTree.Localization.XAML"
             xmlns:viewModels="clr-namespace:POESKillTree.ViewModels.Equipment"
             xmlns:views="clr-namespace:POESKillTree.Views.Equipment"
             xmlns:dialogs="clr-namespace:POESKillTree.Controls.Dialogs"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:InventoryViewModel}"
             dialogs:DialogParticipation.Register="{Binding}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<!--Rows for Jewel Slots below-->
			<!--Int Jewel Slots on north, Str Jewel Slots at West, Dex Jewel Slots at East; Hybrid Jewel Slots diagonally between (NE for Int+Str Jewel Slots Etc)-->
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<!--Non THreshold Jewel Slots-->
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Column="0" Grid.ColumnSpan="3"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="36" FontWeight="Bold"
                   Foreground="{DynamicResource AccentColorBrush}">
			<TextBlock.Text>
				<l:Catalog>Inventory</l:Catalog>
			</TextBlock.Text>
		</TextBlock>
		<views:InventoryItemView Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="0 0 71 108"
                                 HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                 Width="98" Height="192"
                                 DataContext="{Binding MainHand}" />
		<views:InventoryItemView Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="0 0 0 108"
                                 HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                 Width="51" Height="51"
                                 DataContext="{Binding Ring}" />
		<views:InventoryItemView Grid.Column="0"
                                 Grid.Row="1"
                                 Margin="0 0 0 0"
                                 HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                 Width="98" Height="98"
                                 DataContext="{Binding Gloves}" />

		<StackPanel Grid.Column="1" Grid.Row="1"
                    Margin="20 0 20 0"
                    Orientation="Vertical">
			<views:InventoryItemView Margin="0 0 0 10"
                                     Width="98" Height="98"
                                     DataContext="{Binding Helm}" />
			<views:InventoryItemView Margin="0 0 0 10"
                                     Width="98" Height="145"
                                     DataContext="{Binding Armor}" />
			<views:InventoryItemView Margin="0 0 0 0"
                                     Width="98" Height="51"
                                     DataContext="{Binding Belt}" />
		</StackPanel>

		<views:InventoryItemView Grid.Column="2"
                                 Grid.Row="1"
                                 Margin="71 0 0 108"
                                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                 Width="98" Height="192"
                                 DataContext="{Binding OffHand}" />
		<views:InventoryItemView Grid.Column="2"
                                 Grid.Row="1"
                                 Margin="0 0 0 108"
                                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                 Width="51" Height="51"
                                 DataContext="{Binding Ring2}" />
		<views:InventoryItemView Grid.Column="2"
                                 Grid.Row="1"
                                 Margin="0 0 0 169"
                                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                 Width="51" Height="51"
                                 DataContext="{Binding Amulet}" />
		<views:InventoryItemView Grid.Column="2"
                                 Grid.Row="1"
                                 Margin="0 0 0 0"
                                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                 Width="98" Height="98"
                                 DataContext="{Binding Boots}" />

		<views:BinView Grid.Column="0" Grid.ColumnSpan="3"
                       Grid.Row="2"
                       Margin="0 20 0 0"
                       HorizontalAlignment="Right" />

		<views:InventoryItemView Grid.Column="4" Grid.Row="4"
		Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
		Width="41" Height="38" DataContext="{Binding Jewel}" />
		<views:InventoryItemView Grid.Column="5" Grid.Row="4"
		Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
		Width="41" Height="38" DataContext="{Binding Jewel}" />
	</Grid>
</UserControl>